@model TheSocialNetwork.Models.Groups.GroupIndexViewModel


@{
    ViewBag.Title = "Group Index";
}

<h2>Group Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Groups.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Groups.FirstOrDefault().CreatedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Groups)
    {
        <tr>

            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>

        </tr>
    }
</table>



